<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/mSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />
    <!-- <SurfaceView
         android:id="@+id/mSurfaceView"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_centerInParent="true" />-->

    <include layout="@layout/zz_video_player_title_bar" />

    <include layout="@layout/tx_video_player_controller" />

    <!--默认播放背景-->
    <ImageView
        android:id="@+id/iv_video_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_video_default" />

    <!--中间播放按钮-->
    <ImageView
        android:id="@+id/iv_center_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_video_center_player"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/loadingImageView"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/loading_animation"
        android:visibility="gone" />
</RelativeLayout>
